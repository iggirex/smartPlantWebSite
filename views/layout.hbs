<!DOCTYPE html>
<html>
  <head>
    <title>{{title}}</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/d3/3.5.10/d3.js"></script>
  </head>
  <body>
      {{{body}}}

    <div id="content">
        <h1>Title</h1>
    </div>

    <script type="text/javascript">
      var sensorData = {};
      var data;
      var margin = {top: 40, right: 40, bottom: 40, left:40},
          width = window.innerWidth,
          height = window.innerHeight;

      var x_scale = d3.scale.log().range([0, width]);
      var y_scale = d3.scale.log().range([height, 0]);

      var svg = d3.select("#content").append("svg")
        .attr("viewBox", "0 0 " + width + " " + height)
        .attr("width", width)
        .attr("height", height);

      d3.json("https://smartplant-sensordb.herokuapp.com/sensordata", function(error, data) {
        if (error) return console.warn(error);
        console.log(data);
        data.forEach(function(d) {
          data[d.createDate] = {
            lightVal : d.light,
            soilVal : d.soil,
            date: d.createDate
          };
        var x = d3.time.scale()
          .domain([new Date(data[0].date), d3.time.hour.offset(new Date(data[data.length - 1].date), 1)])
          .rangeRound([0, width - margin.left - margin.right]);

        var y = d3.scale.linear()
          .domain([0, d3.max(data, function(d) { return d.total; })])
          .range([height - margin.top - margin.bottom, 0]);

        var xAxis = d3.svg.axis()
          .scale(x)
          .orient('bottom')
          .ticks(d3.time.days, 1)
          .tickFormat(d3.time.format('%a %d'))
          .tickSize(0)
          .tickPadding(8);

        var yAxis = d3.svg.axis()
          .scale(y)
          .orient('left')
          .tickPadding(8);
        });

        x_scale.domain(d3.extent(d3.values(data), function(d) {
          return d.date;
        }));
        y_scale.domain(d3.extent(d3.values(data), function(d) {
          return d.lightVal;
        }));

        svg.selectAll("circle")
          .data(d3.values(data))
          .enter()
          .append("circle")
          .attr("cx", function(d) { return x_scale(d["date"]); })
          .attr("cy", function(d) { return y_scale(d["lightVal"]); })
          .attr("r", 5)
          // .attr("fill", function(d) {
          //   return country_attrs[d.id]["color"];
          // });


      console.log("this is data: ",data);
      svg.selectAll("circle")
        .data(d3.values(data))
        .enter()
        .append("circle")
        .attr("cx", function(d) { return d["light"]; })
        .attr("cy", function(d) { return d["soil"]; })
        .attr("r", 5)
          // .attr("fill", function(d) {
          //   return country_attrs[d.id]["color"];
          // });
      });
    </script>
  </body>
</html>
